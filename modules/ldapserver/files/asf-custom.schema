        NAME 'asf-member-status'
        DESC 'This should show the current status of the member: Active, Emeritus, Deceased, or Resigned'
        EQUALITY caseIgnoreMatch
        SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
