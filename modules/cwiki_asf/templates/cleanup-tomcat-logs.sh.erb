#!/bin/sh

CATALINA_LOG_DIR=<%= @current_dir %>/logs
X1_SPACE=`df -H | grep x1 | awk '{print $5}' | cut -d'%' -f1`

cd $CATALINA_LOG_DIR

if [ $X1_SPACE -gt 70 ];then
  find . -mtime +7 -exec rm {} \;
  X1_SPACE=`df -H | grep x1 | awk '{print $5}' | cut -d'%' -f1`
  if [ $X1_SPACE -gt 70 ];then
    find . -mtime +3 -exec rm {} \;
fi
else
  find . -mtime +14 -exec rm {} \;
fi

