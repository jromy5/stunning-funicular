sonar.jdbc.username=<%= @sonar_jdbc_username %>
sonar.jdbc.password=<%= @sonar_jdbc_password %>
sonar.jdbc.url=<%= @sonar_jdbc_url %>
sonar.jdbc.maxActive=40
sonar.jdbc.maxIdle=10
sonar.jdbc.minIdle=5
sonar.jdbc.maxWait=10000

sonar.web.context=<%= @sonar_web_context %>
sonar.web.port=<%= @sonar_web_port %>
sonar.web.javaOpts=-server -Xmx512m -Xms128m -XX:+HeapDumpOnOutOfMemoryError -Djava.net.preferIPv4Stack=true
sonar.web.javaAdditionalOpts=-Djavax.net.ssl.trustStore=/x1/sonar/jvm-sslcerts/cacerts

sonar.log.level=DEBUG

